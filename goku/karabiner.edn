           [:##k {:mkey {:y -1024}}]
           [:##h {:mkey {:x -1024}}]
           [:##l {:mkey {:x 1024}}]
           [:##y {:pkey :button1}]
           [:##m {:pkey :button3}]
           [:##n {:pkey :button2}]
           [:##s ["mouse-scroll-mode" 1] nil {:afterup ["mouse-scroll-mode" 0]}]
           [:##f {:mkey {:speed 0.5}}]
  ]}


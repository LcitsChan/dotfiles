  {:des "markdown"
   :rules [:m-mode
           [:d :alfred_mk]
           [:1 [:alfred_mk :1]]
           [:2 [:alfred_mk :2]]
           [:3 [:alfred_mk :3]]
           [:4 [:alfred_mk :4]]
           [:5 [:alfred_mk :5]]
  ]}

  {:des "symbols"
   :rules [:period-mode
           [:left_command [:alfred_sb :!Sc]]
           [:left_option [:alfred_sb :!So]]
           [:left_shift [:alfred_sb :!Ss]]
           [:left_control [:alfred_sb :!St]]
           [:tab [:alfred_sb :t :a]]
           [:spacebar [:alfred_sb :s :p]]
           [:return_or_enter [:alfred_sb :r :e]]
